@model AddDeviceFormModel;
@{
    ViewData["Title"] = "Add Device";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>

    </div> 

    <form method="post">
        <div class="form-group">
            <label asp-for="Town"></label>
            <input asp-for="Town" class="form-control" id="validationTooltip01" placeholder="Sofia ...">
            <span asp-validation-for="Town" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DataCenter"></label>
            <input asp-for="DataCenter" class="form-control" id="validationTooltip01" placeholder="Studentski grad bl.4 ...">
            <span asp-validation-for="DataCenter" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Manifacturer"></label>
            <input asp-for="Manifacturer" class="form-control" id="validationTooltip01" placeholder="HUAWEI ...">
            <span asp-validation-for="Manifacturer" class="small text-danger"></span>
        </div>    
        <input class="btn btn-primary" type="submit" value="Save" />
    </form>

</div>
