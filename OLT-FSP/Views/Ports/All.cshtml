                </tr>
            </thead>
            <tbody>
                @foreach (var port in Model.Ports)
                {
                    @if (port.Targets.Any())
                    {
                        foreach (var target in port.Targets)
                        {
                            <tr class="clickable text-center">
                                @*<td>@port.DataCenterName</td>
                                <td>@port.DeviceName</td>*@
