}

<div class="container">


</div>
<div class="text-center">
    @if (@Model.DeviceFullName != null)
    {
        <h1 class="display-4">@Model.DeviceFullName</h1>
    }
    else
    {
        <h1 class="display-4">@ViewData["Title"]</h1>
    }
</div>

